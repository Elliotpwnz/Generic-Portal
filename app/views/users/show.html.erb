<h1>Memos</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @user.memos.order("created_at DESC").each do |memo| %>
        <tr>
          <% @memoUser = User.find(memo.user_id) %>
          <td>
            <%= link_to memo.title, memo %>
            <p style="margin-top:10px;">
              <small>
                <%= "Added #{time_ago_in_words(memo.created_at)} ago" %>
              </small>
            </p>
          </td>
          <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
          <td><%= link_to 'Delete', memo, method: :delete, data: { confirm: 'Are you sure?' },
          :remote => true, :class => 'delete_memo' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
