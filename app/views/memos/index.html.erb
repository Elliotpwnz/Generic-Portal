<h1>Memos</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @memos.each do |memo| %>
        <tr>
          <% @memoUser = User.find(memo.user_id) %>
          <td><%= link_to memo.title, memo %></td>
          <td><%= link_to @memoUser.email, @memoUser %></td>
          <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
          <td><%= link_to 'Delete', memo, method: :delete, data: { confirm: 'Are you sure?' },
          :remote => true, :class => 'delete_memo' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to 'New Memo', new_memo_path %>
